.container-fluid
  .right-col
    .row
      .col-md-8.col-md-offset-2
        = @space.name
      .col-md-8.col-md-offset-2
        = @space.formatted_address
      .col-md-8.col-md-offset-2
        = @space.contact_name
      .col-md-8.col-md-offset-2
        = @space.contact_number
      .col-md-8.col-md-offset-2
        = @space.contact_email
      .col-md-12.col-md-offset-2
        = link_to 'Edit Description', edit_space_path, class: 'btn btn-primary'
  .left-col
    .row
      .col-md-8.col-md-offset-2
        %img{src: "https://maps.googleapis.com/maps/api/staticmap?center=#{@space.address},#{@space.city}, #{@space.province_name}&size=500x300&sensor=false&markers=color:red%7Clabel:#{@space.name}%7C#{@space.address},#{@space.city}, #{@space.province_name}"}

  .row
    .col-md-8.col-md-offset-1
      = link_to 'Write New Review', new_space_review_path(space_id: @space.id), class: 'btn btn-primary'

  .left-col
    .row
      .pagination
        - if @paginate
          .col-md-12.col-md-offset-2
            = will_paginate @reviews, renderer: BootstrapPagination::Rails
        - @reviews.each do |review|
          .row
            .col-md-12.col-md-offset-2
              %h3= review.created_by_name
          .row
            .well.col-md-12.col-md-offset-2
              = review.content
          .row
            .col-md-12.col-md-offset-2
              %span.note= review.created_at.strftime('%B %d, %Y')

    .right-col
      - # TODO events