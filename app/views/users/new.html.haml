.form-horizontal
  %h1 Create New Account
  = simple_form_for @user do |f|
    .form-group
      %label{class: 'col-sm-2 control-label'} Name
      .col-sm-10
        = f.text_field :name, class: 'form-control', label: false
    .form-group
      %label{class: 'col-sm-2 control-label'} Email
      .col-sm-10
        = f.text_field :email, class: 'form-control', label: false
    .form-group
      %label{class: 'col-sm-2 control-label'} Password
      .col-sm-10
        = f.text_field :password, class: 'form-control', label: false
    .form-group
      %label{class: 'col-sm-2 control-label'} Confirm Password
      .col-sm-10
        = f.text_field :password_confirmation, class: 'form-control', label: false
    .form-group
      .col-sm-offset-2.col-sm-10
        = f.submit "Create Account", class: "btn btn-default btn-large", 


